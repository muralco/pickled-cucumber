{
  "name": "pickled-cucumber",
  "version": "7.0.0",
  "description": "Cucumber test runner with several condiments",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/muralco/pickled-cucumber.git"
  },
  "exports": {
    ".": "./dist/index.js",
    "./aliases": "./dist/aliases/index.js",
    "./entities": "./dist/entities/index.js",
    "./formatter": "./dist/formatter/index.js",
    "./http": "./dist/http/index.js",
    "./misc": "./dist/misc/index.js",
    "./operators": "./dist/operators/index.js",
    "./steps": "./dist/steps/index.js",
    "./*": "./dist/*.js",
    "./**/*": "./dist/**/*.js"
  },
  "author": "MURAL",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muralco/pickled-cucumber/issues"
  },
  "homepage": "https://github.com/muralco/pickled-cucumber",
  "devDependencies": {
    "@types/lodash": "4.14.168",
    "@types/node": "^22.9.0",
    "@types/node-fetch": "^2.1.2",
    "@types/progress": "2.0.3",
    "@typescript-eslint/eslint-plugin": "4.24.0",
    "@typescript-eslint/parser": "4.24.0",
    "durations": "3.4.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-muralco": "^1.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "execa": "5.0.0",
    "prettier": "2.0.5",
    "ts-unused-exports": "^7.0.3",
    "typescript": "5.9"
  },
  "dependencies": {
    "@cucumber/cucumber": "^12.4.0",
    "json5": "^2.2.3",
    "node-fetch": "^2.2.0",
    "ts-node": "^7.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run lint && tsc",
    "dist": "rm -rf dist && npm run build && npm run test && rm dist/test.*",
    "lint": "eslint . && ts-unused-exports tsconfig.json",
    "lint:fix": "eslint --fix .",
    "pack": "npm run dist && npm pack",
    "setup": "npm i  && npm i --no-save mongodb@6.16",
    "test": "./scripts/test.sh",
    "test:docker:keep": "cd docker && docker-compose run test",
    "test:docker": "npm run test:docker:keep; cd docker && docker-compose down",
    "watch": "tsc -w"
  }
}
